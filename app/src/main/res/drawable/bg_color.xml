<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_activity_detail" />
            <stroke android:color="@color/bg_activity_detail"
                android:width="6dp"/>
            <corners android:radius="5dp"/>
        </shape>

    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#C7C8C8"
                android:endColor="#C8C7C7"
                android:angle="45"/>


        </shape>
    </item>
</selector>