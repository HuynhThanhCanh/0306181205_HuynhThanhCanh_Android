<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LichSuChiTieuActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#BD2121"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#BD2121"
                tools:ignore="MissingConstraints"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_TongChiTieuTrongNam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:text="Tổng chi tiêu trong năm 2020:"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_TongTien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="5.580.000 VNĐ"
            android:textAlignment="center"
            android:textColor="#BD2121"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_XemChiTietTheoNam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="CLick và đây để xem chi tiết >>"
            android:textAlignment="center"
            android:onClick="showFilterActivity"
            android:textColor="#0090FF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_LuaChonMocThoiGian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="#CED0DA"
            android:padding="10dp"
            android:text="TRA CỨU THEO MỐC THỜI GIAN: "
            android:textColor="#000000"
            android:textIsSelectable="false"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_StartDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Từ "
            android:textColor="#000000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edtext_StartDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/et_style"
            android:ems="10"
            android:inputType="date"
            android:onClick="openCalendar"
            android:padding="10dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_EndDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Đến "
            android:textColor="#000000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edtext_EndDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/et_style"
            android:ems="10"
            android:inputType="date"
            android:onClick="openCalendar"
            android:padding="10dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_TongChiTieuTheoMocThoiGian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Tổng chi tiêu:"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_TongTienTheoMocThoiGian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="5.580.000 VNĐ"
            android:textAlignment="center"
            android:textColor="#BD2121"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_XemChiTietTheoMocThoiGian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="CLick và đây để xem chi tiết >>"
            android:onClick="showFilterActivity"
            android:textAlignment="center"
            android:textColor="#0090FF"
            android:textSize="18sp" />

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>