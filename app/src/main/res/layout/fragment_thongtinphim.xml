<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.Thongtinphim">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/avt"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/poster" />

            <ImageView
                android:id="@+id/avt1"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="120dp"
                app:srcCompat="@drawable/ttm" />

            <Button
                android:id="@+id/btndatve"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@+id/avt1"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/holo_red_dark"
                android:padding="5dp"
                android:text="Mua vé"
                android:textColor="@color/cardview_light_background" />

            <TextView
                android:id="@+id/title"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_below="@id/avt"
                android:layout_marginLeft="150dp"
                android:padding="10dp"
                android:text="TIỆC TRĂNG MÁU"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/theloai"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_below="@id/title"
                android:layout_marginLeft="130dp"
                android:padding="5dp"
                android:text="Thể loai :tâm lý ,hài"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/daodien"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_below="@id/theloai"
                android:layout_marginLeft="130dp"
                android:padding="5dp"
                android:text="Đạo diễn : Nguyễn Minh Quang"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/danhgia"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_below="@id/daodien"
                android:layout_marginLeft="130dp"
                android:padding="5dp"
                android:text="Yêu thích :"
                android:textColor="@android:color/black" />

            <RatingBar
                android:id="@+id/sao"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@id/daodien"
                android:layout_marginLeft="150dp"
                android:numStars="5"
                android:scaleX="0.5"
                android:scaleY="0.3" />

            <TextView
                android:id="@+id/ndphim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btndatve"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Nội dung phim "
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ndphim1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ndphim"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:text="Trong buổi họp mặt của nhóm bạn thân, một thành viên bất ngờ đề xuất trò chơi chia sẻ điện thoại nhằm tăng tinh thần “đoàn kết”. Từ đó, những góc khuất của từng người dần hé lộ và khiến cho mối quan hệ vốn khắng khít của họ bắt đầu lay chuyển. "
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/dienvien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ndphim1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Diễn viên "
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <GridLayout
                android:id="@+id/hinhanh"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/dienvien"
                android:columnCount="4"
                android:rowCount="1">

                <ImageView
                    android:id="@+id/hinh1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/mytam" />

                <ImageView
                    android:id="@+id/hinh2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/honganh" />

                <ImageView
                    android:id="@+id/hinh3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/huavivan" />

                <ImageView
                    android:id="@+id/hinh4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/kieuminhtuan" />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/hinhanh"
                android:columnCount="4"
                android:rowCount="1">

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:text="Mỹ Tâm"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:text="Hồng Ánh"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:text="Hứa Vỹ Văn"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:text="Kiều Minh Tuấn"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="10dp" />


            </GridLayout>


        </RelativeLayout>
    </ScrollView>


</FrameLayout>