<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:scrollbarStyle="outsideOverlay"
    tools:context=".fragment.TrangCaNhan_ThongTinFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="80dp"
        android:scrollbarStyle="outsideInset">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgv_Avatar"
                android:layout_width="116dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Huỳnh Thanh Cảnh"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgv_Avatar" />

            <TextView
                android:id="@+id/txtTitle_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Họ và tên" />

            <EditText
                android:id="@+id/edtext_Name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/et_style_outline"
                android:ems="10"
                android:enabled="true"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:text="Huỳnh Thanh Cảnh"
                android:textColor="#000000"
                android:textCursorDrawable="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_Name" />

            <TextView
                android:id="@+id/txtTitle_Phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Số điện thoại" />

            <EditText
                android:id="@+id/edtext_Phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/et_style_outline"
                android:ems="10"
                android:enabled="true"
                android:inputType="phone"
                android:padding="10dp"
                android:text="0989765678"
                android:textColor="#000000"
                android:textCursorDrawable="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtext_Name" />

            <TextView
                android:id="@+id/txtTitle_Birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Ngày sinh" />

            <EditText
                android:id="@+id/edtext_BirthDay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/et_style"
                android:ems="10"
                android:enabled="false"
                android:inputType="date"
                android:padding="10dp"
                android:text="02/10/2000"
                android:textColor="#000000"
                android:textCursorDrawable="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtext_Phone" />

            <TextView
                android:id="@+id/txtTitle_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Email" />

            <EditText
                android:id="@+id/edtext_Email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/et_style"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:padding="10dp"
                android:text="huynhthanhcanh.top@gmail.com"
                android:textColor="#000000"
                android:textCursorDrawable="@android:drawable/status_bar_item_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtext_BirthDay" />

            <TextView
                android:id="@+id/txtTitle_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Đia chỉ" />

            <EditText
                android:id="@+id/edText_Address"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/et_style_outline"
                android:ems="10"
                android:gravity="top"
                android:inputType="textMultiLine|text"
                android:padding="10dp"
                android:text="47/24/38 Bùi Đình Túy, P.24, Q.Bình Thạnh"
                android:textColor="#000000"
                android:textCursorDrawable="@android:drawable/status_bar_item_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_CapNhat"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#BD2121"
        android:text="Cập nhật"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>